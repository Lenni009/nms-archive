context [ SWITCH ] FSR2_ReduceLuminance
{
    ComputeShader   = compile GLSL CS_FSR2_ReduceLuminance;

    PersistShaderReflection = true;
}

context [ PC ] FSR2_ReduceLuminance
{
    ComputeShader   = compile GLSL CS_FSR2_ReduceLuminance;

    PersistShaderReflection = true;
}

